@page
@model ProiectPAW1.Pages.Articles.DeleteModel
@{
    ViewData["Title"] = "Delete Article";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title text-danger">Delete Article</h2>
                    <div class="alert alert-warning">
                        <h5>Are you sure you want to delete this article?</h5>
                        <p>This action cannot be undone.</p>
                    </div>

                    <div class="mb-4">
                        <h4>@Model.Article.Title</h4>
                        <p><strong>Domain:</strong> @Model.Article.Domain</p>
                        <p><strong>Created:</strong> @Model.Article.CreatedAt.ToString("MMM dd, yyyy")</p>
                    </div>

                    <form method="post">
                        <input type="hidden" asp-for="Article.Id" />
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                            <a asp-page="./Details" asp-route-id="@Model.Article.Id" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 