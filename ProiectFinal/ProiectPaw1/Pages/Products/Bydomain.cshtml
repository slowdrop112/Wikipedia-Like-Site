@page
@model ProiectPAW1.Pages.Articles.ByDomainModel
@{
    ViewData["Title"] = "Articles in " + Model.Domain;
}

<h2 class="mb-4">Articles in <strong>@Model.Domain</strong></h2>

@if (!Model.Articles.Any())
{
    <div class="alert alert-warning">No articles found in this domain.</div>
}
else
{
    @foreach (var article in Model.Articles)
    {
        <div class="card mb-3">
            <div class="row g-0">
                @if (article.Images.Any())
                {
                    <div class="col-md-4">
                        <img src="@article.Images.First().ImagePath"
                             class="img-fluid rounded-start article-image"
                             alt="@article.Images.First().AltText">
                    </div>
                }
                <div class="@(article.Images.Any() ? "col-md-8" : "col-md-12")">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a asp-page="/Articles/Details" asp-route-id="@article.Id" class="text-decoration-none">
                                @article.Title
                            </a>
                            @if (article.IsProtected)
                            {
                                <i class="bi bi-lock-fill text-warning" title="Protected Article"></i>
                            }
                        </h5>
                        <h6 class="card-subtitle mb-2 text-muted">
                            <span class="badge bg-secondary">@article.Domain</span>
                            by @article.Author?.UserName
                        </h6>
                        @if (article.Chapters.Any())
                        {
                            var firstChapter = article.Chapters.OrderBy(c => c.OrderIndex).First();
                            <p class="card-text">
                                @(firstChapter.Content.Length > 200
                                    ? firstChapter.Content.Substring(0, 200) + "..."
                                    : firstChapter.Content)
                            </p>
                        }
                        else
                        {
                            <p class="card-text text-muted">No content available</p>
                        }
                        <div class="card-text">
                            <small class="text-muted">
                                Created @article.CreatedAt.ToString("MMM dd, yyyy")
                                @if (article.LastModifiedAt != article.CreatedAt)
                                {
                                    <span>• Updated @article.LastModifiedAt.ToString("MMM dd, yyyy")</span>
                                }
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}
