@page
@model ProiectPAW1.Pages.Admin.StatisticsModel
@{
    ViewData["Title"] = "Statistics";
}

<div class="container">
    <h1>Encyclopedia Statistics</h1>
    <hr />

    <div class="row">
        <div class="col-md-3">
            <div class="card text-center mb-4">
                <div class="card-body">
                    <h3 class="display-4">@Model.TotalArticles</h3>
                    <p class="text-muted mb-0">Total Articles</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center mb-4">
                <div class="card-body">
                    <h3 class="display-4">@Model.TotalUsers</h3>
                    <p class="text-muted mb-0">Registered Users</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center mb-4">
                <div class="card-body">
                    <h3 class="display-4">@Model.TotalEdits</h3>
                    <p class="text-muted mb-0">Total Edits</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center mb-4">
                <div class="card-body">
                    <h3 class="display-4">@Model.ProtectedArticles</h3>
                    <p class="text-muted mb-0">Protected Articles</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">Articles by Domain</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Domain</th>
                                    <th>Articles</th>
                                    <th>Percentage</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var domain in Model.DomainStats)
                                {
                                    <tr>
                                        <td>@domain.Domain</td>
                                        <td>@domain.Count</td>
                                        <td>
                                            <div class="progress">
                                                <div class="progress-bar" role="progressbar" 
                                                     style="width: @domain.Percentage%">
                                                    @domain.Percentage.ToString("0.0")%
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">Top Contributors</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>User</th>
                                    <th>Articles</th>
                                    <th>Edits</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var contributor in Model.TopContributors)
                                {
                                    <tr>
                                        <td>
                                            @contributor.UserName
                                            @foreach (var role in contributor.Roles)
                                            {
                                                <span class="badge bg-secondary ms-1">@role</span>
                                            }
                                        </td>
                                        <td>@contributor.ArticleCount</td>
                                        <td>@contributor.EditCount</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Recent Activity</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>User</th>
                                    <th>Action</th>
                                    <th>Article</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var activity in Model.RecentActivity)
                                {
                                    <tr>
                                        <td>@activity.Date.ToString("MMM dd, yyyy HH:mm")</td>
                                        <td>@activity.UserName</td>
                                        <td>@activity.Action</td>
                                        <td>
                                            <a asp-page="/Articles/Details" asp-route-id="@activity.ArticleId">
                                                @activity.ArticleTitle
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 