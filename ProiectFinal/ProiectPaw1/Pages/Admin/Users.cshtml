@page
@model ProiectPAW1.Pages.Admin.UsersModel
@{
    ViewData["Title"] = "User Management";
}

<div class="container">
    <h1>User Management</h1>
    <hr />

    <div class="row mb-4">
        <div class="col-md-6">
            <form method="get" class="row g-2">
                <div class="col-auto flex-grow-1">
                    <input type="search" name="search" class="form-control" 
                           placeholder="Search users..." value="@Model.SearchQuery">
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-secondary">Search</button>
                </div>
            </form>
        </div>
        <div class="col-md-6 text-md-end">
            <div class="btn-group">
                <a asp-page="./Users" class="btn btn-outline-primary @(string.IsNullOrEmpty(Model.Role) ? "active" : "")">
                    All Users
                </a>
                <a asp-page="./Users" asp-route-role="Administrator" 
                   class="btn btn-outline-primary @(Model.Role == "Administrator" ? "active" : "")">
                    Administrators
                </a>
                <a asp-page="./Users" asp-route-role="Moderator" 
                   class="btn btn-outline-primary @(Model.Role == "Moderator" ? "active" : "")">
                    Moderators
                </a>
            </div>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Roles</th>
                    <th>Join Date</th>
                    <th>Articles</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td>
                            @foreach (var role in user.Roles)
                            {
                                <span class="badge bg-secondary me-1">@role</span>
                            }
                        </td>
                        <td>@user.JoinDate.ToString("MMM dd, yyyy")</td>
                        <td>@user.ArticleCount</td>
                        <td>
                            <div class="btn-group">
                                <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle" 
                                        data-bs-toggle="dropdown">
                                    Manage Roles
                                </button>
                                <ul class="dropdown-menu">
                                    @if (!user.Roles.Contains("Administrator"))
                                    {
                                        <li>
                                            <form method="post" class="dropdown-item-form">
                                                <input type="hidden" name="userId" value="@user.Id" />
                                                <input type="hidden" name="role" value="Administrator" />
                                                <button type="submit" class="dropdown-item" asp-page-handler="AddRole">
                                                    Make Administrator
                                                </button>
                                            </form>
                                        </li>
                                    }
                                    else
                                    {
                                        <li>
                                            <form method="post" class="dropdown-item-form">
                                                <input type="hidden" name="userId" value="@user.Id" />
                                                <input type="hidden" name="role" value="Administrator" />
                                                <button type="submit" class="dropdown-item text-danger" asp-page-handler="RemoveRole">
                                                    Remove Administrator
                                                </button>
                                            </form>
                                        </li>
                                    }
                                    @if (!user.Roles.Contains("Moderator"))
                                    {
                                        <li>
                                            <form method="post" class="dropdown-item-form">
                                                <input type="hidden" name="userId" value="@user.Id" />
                                                <input type="hidden" name="role" value="Moderator" />
                                                <button type="submit" class="dropdown-item" asp-page-handler="AddRole">
                                                    Make Moderator
                                                </button>
                                            </form>
                                        </li>
                                    }
                                    else
                                    {
                                        <li>
                                            <form method="post" class="dropdown-item-form">
                                                <input type="hidden" name="userId" value="@user.Id" />
                                                <input type="hidden" name="role" value="Moderator" />
                                                <button type="submit" class="dropdown-item text-danger" asp-page-handler="RemoveRole">
                                                    Remove Moderator
                                                </button>
                                            </form>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (!Model.Users.Any())
    {
        <div class="alert alert-info">
            No users found matching your criteria.
        </div>
    }
</div>

<style>
    .dropdown-item-form {
        display: block;
        width: 100%;
        padding: 0;
        margin: 0;
    }

    .dropdown-item-form .dropdown-item {
        width: 100%;
        padding: .25rem 1rem;
        clear: both;
        font-weight: 400;
        color: #212529;
        text-align: inherit;
        text-decoration: none;
        white-space: nowrap;
        background-color: transparent;
        border: 0;
    }

    .dropdown-item-form .dropdown-item:hover {
        color: #1e2125;
        background-color: #e9ecef;
    }

    .dropdown-item-form .dropdown-item.text-danger:hover {
        color: #dc3545 !important;
    }
</style> 